{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% trans_default_domain 'user' %}

{% block content %}
    <h2>{{ 'title.delete'|trans }}</h2>
    <form method="post">
        <input type="hidden" name="confirm" value="ok">
        <div class="alert alert-warning">{{ 'text.delete_warning'|trans({'%user%': user.name ~ ' (' ~user.username ~ ')'})|nl2br }}</div>
        {{ m.link_button(path('user_form', {'id': user.id}), 'arrow-left', 'btn-info', 'button.back_to_user'|trans) }}
        {{ m.submit_button('submit', 'trash', 'btn-danger', 'button.delete_confirm'|trans) }}
    </form>
{% endblock %}
